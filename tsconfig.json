// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "paths": {
      "app": ["./app/*", "./app/"],
      "components": ["./components/*", "./components/"],
      "config": ["./config/*", "./config"],
      "img": ["./theme/img/*", "./theme/img/"],
      "lib": ["./lib/*", "./lib"],
      "store": ["./store/*", "./store"],
      "theme": ["./theme/*", "./theme"],
      "types": ["./types/*", "./types/"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    //"target": "esnext"
  },
  "exclude": [
    "node_modules",
    "e2e"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.svg",
    "**/*.png",
  ]
}
